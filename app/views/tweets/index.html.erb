<% if @campaign.tweets.any? %>
  <ol>
  <% @campaign.tweets.each do |tweet| %>
    <li><%= tweet.text %></li>
    <ul>
      <li><%= tweet.screen_name %></li>
      <li><%= tweet.entry_time %></li>
      <li><%= tweet.followers_count %></li>
    </ul>
  <% end %>
  </ol>
<% else %>
  <%= "No tweets found" %>
<% end %>